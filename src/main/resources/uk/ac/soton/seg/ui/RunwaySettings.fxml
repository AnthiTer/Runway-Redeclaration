<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<fx:root type="BorderPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <FlowPane hgap="60.0" maxHeight="130.0" maxWidth="560.0" minHeight="130.0" orientation="VERTICAL" prefHeight="130.0" prefWidth="560.0" vgap="10.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="Designator" />
                  <TextField fx:id="designatorTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="True Bearing" />
                  <TextField fx:id="bearingTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="Remarks" />
                  <TextField fx:id="remarksTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="TORA" />
                  <TextField fx:id="toraTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="TODA" />
                  <TextField fx:id="todaTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="ASDA" />
                  <TextField fx:id="asdaTextField" />
               </children>
            </HBox>
            <HBox alignment="BASELINE_RIGHT" spacing="10.0">
               <children>
                  <Label text="LDA" />
                  <TextField fx:id="ldaTextField" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </FlowPane>
   </center>
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
         <buttons>
            <Button fx:id="saveButton" defaultButton="true" disable="true" mnemonicParsing="false" text="Save" />
         </buttons>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</fx:root>
