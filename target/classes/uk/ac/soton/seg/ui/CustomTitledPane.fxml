<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<fx:root alignment="TOP_LEFT" animated="false" contentDisplay="RIGHT" graphicTextGap="16.0" type="TitledPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <graphic>
      <Button fx:id="deleteButton" alignment="CENTER_RIGHT" mnemonicParsing="false" text="Delete">
         <graphic>
            <Text fill="RED" rotate="45.0" strokeType="OUTSIDE" strokeWidth="0.0" text="+">
               <font>
                  <Font name="System Bold Italic" size="16.0" />
               </font></Text>
         </graphic>
      </Button>
   </graphic>
   <content>
      <BorderPane>
         <top>

                  <ButtonBar fx:id="addThingButtonParent" BorderPane.alignment="CENTER">
                     <buttons>
                        <Button fx:id="addThingButton" mnemonicParsing="false" text="Add *thing*">
                           <graphic>
                              <Text fill="#1c9a1c" strokeType="OUTSIDE" strokeWidth="0.0" text="+" />
                           </graphic>
                        </Button>
                     </buttons>
               <BorderPane.margin>
                  <Insets bottom="10.0" />
               </BorderPane.margin>
                  </ButtonBar>

         </top>
         <center>
            <BorderPane fx:id="contentArea" BorderPane.alignment="CENTER" />
         </center>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </BorderPane>
   </content>
</fx:root>
